{
	"compilerOptions": {
		"noImplicitAny": false,
		"noImplicitThis": false,
		"allowSyntheticDefaultImports": true,
		"target": "es2015",
		"strict": true,
		"strictNullChecks": false,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"rootDir": "dev",
		"outDir": "src",
		"sourceMap": true,
		"lib": ["es2015", "dom"]
	},
	"include": [
		"./types/**/*",
		"./*.d.ts",
		"./dev/core/**/*",
		"./dev/utilities/**/*",
		"./dev/renderer/components/constants/*",
		"./dev/renderer/components/*",
		"./dev/renderer/components/dashboard/*.ts"
	],
	"exclude": [
		"node_modules",
		"test"
	],
	"typeRoots": [
		"node_modules/@types"
	]
}
