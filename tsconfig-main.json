{
	"compilerOptions": {
		"noImplicitAny": false,
		"noImplicitThis": false,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"module": "es2015",
		"strict": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"outDir": ".",
		"rootDir": ".",
		"sourceMap": true,
		"lib": ["es2015", "dom"]
	},
	"include": ["**/*"],
	"exclude": [
		"node_modules"
	],
	"typeRoots": [
		"node_modules/@types"
	]
}
