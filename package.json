		"webpack-dev-server": "^3.1.4",
		"webpack-hot-middleware": "^2.22.2",
		"webpack-merge": "^4.1.3"
	},
	"prettier": {
		"singleQuote": true,
		"semi": true,
		"tabWidth": 4,
		"useTabs": true,
		"trailingComma": "all"
	}
}
