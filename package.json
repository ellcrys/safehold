		"file-loader": "^1.1.11",
		"html-webpack-plugin": "^3.2.0",
		"inject-loader": "^4.0.1",
		"karma": "^2.0.2",
		"karma-chai": "^0.1.0",
		"karma-coverage": "^1.1.2",
